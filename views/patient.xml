<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form view-->
    <record id="view_hospital_patient_form" model="ir.ui.view">
    <field name="name">hospital.patient.form</field>
    <field name="model">hospital.patient</field>
    <field name="arch" type="xml">
        <form>
            <!-- Sheet tag used to create a div-type section-->
            <sheet>
                <div class="oe_title">
                    <h1>
                        <field name="ref"/>  
                    </h1>
                </div>
                <group>
                    <field name="name"/>
                    <field name="age"/>
                    <field name="is_child"/>
                    <field name="gender"/>
                    <field name="capitalized_name"/>
                </group>
            </sheet>
            <div class="oe_chatter">
                <field name="message_follower_ids"/>
                <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
            </div>
        </form>
    </field>
</record>


    <!-- Tree view-->
    <record id="view_hospital_patient_trees" model="ir.ui.view">
        <field name="name">hospital.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree string="Hospital">
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
            </tree>
        </field>
    </record>

    <!-- action-->
    <record id="action_hospital_view" model="ir.actions.act_window">
        <field name="name">Patient</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new account
            </p>
        </field>
    </record>

    <menuitem
            id="menu_hospital_patient"
            name="Patient"
            parent="menu_hospital_operation"
            action="action_hospital_view"
            sequence="12"/>
</odoo>